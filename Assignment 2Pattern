import java.util.*;
class Pattern1
{
public static void main(String args[])
{
int i,j,n;
Scanner sc=new Scanner(System.in);
n=sc.nextInt();
for(i=1;i<=n;i++)
{
for(j=1;j<=i;j++)
{
System.out.print("*");
}
System.out.println(" ");
}
 for( i=1;i<=n;i++)
 {
for( j=i-1;j<=n-2;j++)
 {
System.out.print("*");
}
System.out.println(" ");
}
}
}
