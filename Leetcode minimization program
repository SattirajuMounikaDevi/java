import java.util.*;
class Minimization
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int k=sc.nextInt();
int i=1;
while(i<=k)
{
int count=0;
String s=sc.next();
int n=s.length();
for(int j=1;j<n;j++)
if(s.charAt(j-1)==s.charAt(k-1))
count++;
System.out.println(count);
i++;
}
}
}
