import java.util.*;
class recu
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
System.out.println("Enter the value of n");
int n=sc.nextInt();
System.out.println("Sum of "+n+" numbers:"+sum(n));
}
public static int sum(int n)
{
if(n!=0)
return (n+sum(n-1));
else 
return n;
}
}

