import java.util.*;
class Capital
{
public static void  main(String args[])
{
Scanner sc=new Scanner(System.in);
System.out.println("Enter a string");
String str=sc.nextLine();
String sms=" ";
int n=str.length();
for(int i=0;i<n;i++)
{
if(str.charAt(i)==' ')
{
sms=sms+Character.toUpperCase(str.charAt(i+1));
i++;
}
else
{
sms=sms+str.charAt(i)+" ";
}
}
System.out.println(sms);
}
}

