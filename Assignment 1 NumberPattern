import java.util.*;
class Pattern

{

    public static void main(String args[])

    {
 
       int i,j,n;
      Scanner sc=new Scanner(System.in);
n=sc.nextInt();
 for( i=1;i<=n;i++)
         
        {
      
 for( j=i-1;j<=n-1;j++)
       
        {
      
System.out.print("* ");
}
System.out.println(" ");
         
}
   }

}
